<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane maxHeight="-Infinity" maxWidth="600.0" minHeight="500.0" minWidth="600.0" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.isec.laf.jogo.iu.gui.ControllerMenuFimDoJogo">
   <children>
      <ImageView fitHeight="500.0" fitWidth="600.0">
         <image>
            <Image url="@fundo.jpg" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" maxHeight="500.0" maxWidth="600.0" minHeight="500.0" minWidth="600.0" prefHeight="500.0" prefWidth="600.0" spacing="7.5" style="-fx-background-color: 4D4D4D;">
         <children>
            <Text fx:id="idTexto" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="O que deseja efetuar agora?">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font></Text>
            <HBox alignment="CENTER" prefHeight="65.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Button fx:id="btnIniciarNovoJogo" maxWidth="200.0" minWidth="200.0" mnemonicParsing="false" onAction="#iniciarNovoJogo" prefWidth="200.0" text="Iniciar novo jogo" />
                  <Button fx:id="btnMenuPrincipal" maxWidth="200.0" minWidth="200.0" mnemonicParsing="false" onAction="#menuPrincipal" prefWidth="200.0" text="Retornar ao menu principal" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
